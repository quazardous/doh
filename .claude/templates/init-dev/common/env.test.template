# Test Environment Configuration
APP_NAME={{PROJECT_NAME}}_test
API_URL=http://localhost:8000
APP_ENV=test

# Test Database (SQLite for speed)
DATABASE_URL=sqlite:///var/test.db

# Alternative: Dedicated test database
# DATABASE_URL=postgresql://dev_user:dev_password@postgres:5432/{{PROJECT_NAME}}_test

# Frontend Environment Variables (Test Override)
FRONTEND_API_URL=${API_URL}

# Mail (Null transport for tests)
MAIL_HOST=null
MAIL_PORT=null
MAIL_FROM=${APP_NAME}@test.localhost

# Cache (In-memory for tests)
REDIS_URL=memory://
CACHE_DRIVER=memory

# Session (Test-specific secret)
SESSION_SECRET=test-session-secret-not-secure

# File Storage (Temporary for tests)
STORAGE_TYPE=memory
STORAGE_PATH=/tmp/test-storage

# Logging (Test-specific)
LOG_LEVEL=error
LOG_FILE=/tmp/test.log

# Queue (Sync execution for tests)
QUEUE_DRIVER=sync

# Disable external services in tests
STRIPE_KEY=
AWS_ACCESS_KEY_ID=
GOOGLE_ANALYTICS_ID=