global:
  sendAnonymousUsage: false

api:
  dashboard: true
  insecure: true   # ⚠️ Development only

providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    watch: true
    exposedByDefault: false
    constraints: "Label(`dev.project`, `{{PROJECT_NAME}}`)"  # Filter by project
  file:
    filename: /etc/traefik/dynamic.yaml
    watch: true

log:
  level: INFO
  filePath: /logs/traefik.log

accessLog:
  filePath: /logs/traefik_access.log

entryPoints:
  web:
    address: ":80"
  websecure:
    address: ":443"