# Django Test Environment
DEBUG=True
DJANGO_SETTINGS_MODULE={{PROJECT_NAME}}.settings.test

# Test Database (SQLite for speed)
DATABASE_URL=sqlite:///test.db

# Alternative: Dedicated test database
# DATABASE_URL=postgresql://dev_user:dev_password@postgres:5432/{{PROJECT_NAME}}_test

# Cache (dummy backend for isolation)
CACHE_BACKEND=dummy://

# Celery (eager execution in tests)
CELERY_TASK_ALWAYS_EAGER=True
CELERY_TASK_EAGER_PROPAGATES=True

# Email (console backend for test emails)  
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Media/Static (local test directories)
MEDIA_ROOT=/tmp/test_media
STATIC_ROOT=/tmp/test_static

# Disable external services in tests
USE_REDIS=False
USE_S3=False

# DOH Hello World validation secret (test environment)
DOH_HELLOWORLD={{DOH_HELLOWORLD_TEST}}