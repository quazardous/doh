	@echo "ğŸ’ Installing Rails dependencies..."
	@echo "ğŸ“‹ Command: ${EXEC_CONTAINER} ${APP_CONTAINER} bundle install"
	@${EXEC_CONTAINER} ${APP_CONTAINER} bundle install
