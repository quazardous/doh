# Symfony Test Environment
APP_ENV=test
APP_SECRET=change-me-in-prod

# Test Database (SQLite for speed)  
DATABASE_URL="sqlite:///%kernel.project_dir%/var/test.db"

# Alternative: Dedicated test database
# DATABASE_URL="mysql://dev_user:dev_password@mysql:3306/{{PROJECT_NAME}}_test"

# Mailer (null transport for tests)
MAILER_DSN=null://null

# Cache (filesystem adapter for tests)
CACHE_ADAPTER=cache.adapter.filesystem

# Messenger (sync transport for immediate execution)
MESSENGER_TRANSPORT_DSN=sync://

# Disable external services in tests
REDIS_URL=
S3_BUCKET=