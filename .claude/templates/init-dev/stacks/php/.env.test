# Laravel Test Environment
APP_NAME={{PROJECT_NAME}}
APP_ENV=testing
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Test Database (SQLite for speed)
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

# Alternative: Dedicated test database
# DB_CONNECTION=mysql
# DB_HOST=mysql
# DB_PORT=3306
# DB_DATABASE={{PROJECT_NAME}}_test
# DB_USERNAME=dev_user
# DB_PASSWORD=dev_password

# Cache (array driver for isolation)
CACHE_DRIVER=array
SESSION_DRIVER=array

# Queue (sync for immediate execution in tests)
QUEUE_CONNECTION=sync

# Mail (log driver for test emails)
MAIL_MAILER=log

# Disable external services in tests
BROADCAST_DRIVER=log